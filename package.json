{
  "name": "cineverse",
  "version": "3.2.0",
  "description": "Modern dizi ve film kültür platformu",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npx tailwindcss -i ./src/styles.css -o ./src/output.css --watch\" \"vite\"",
    "build": "npm run build:css && vite build",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./src/output.css --minify",
    "preview": "vite preview",
    "deploy": "npm run build && vercel --prod",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "prepare": "husky install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "@vercel/analytics": "^1.1.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.40.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.13",
    "terser": "^5.44.0",
    "vite": "^5.0.10"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "cinema",
    "movies",
    "tv-shows",
    "reviews",
    "film-culture"
  ],
  "author": "CineVerse Team",
  "license": "MIT"
}
